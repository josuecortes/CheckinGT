Sec::Application.routes.draw do
 
  namespace :core do resources :portos end

  namespace :aquaviario do resources :dads end

  root :to => 'home#index'
  resources :intranet
  resources :home

  namespace :core do
    resources :usuarios do
      get "resetasenha"
      resources :senhas
    end
    resources :login
    resources :perfil
    resources :modulos do
      resources :sistemas
    end
    resources :grupos do
      resources :grupo_sistemas
      resources :usuario_grupos
    end
    
    resources :empresas do
    	resources :empresa_modulos
    	resources :aquaviarios
    	resources :usuario_master
    end
    resources :ufs
   
    
    
  end

end

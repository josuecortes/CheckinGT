<div class="row">
	<div class="span10 offset1">

		<%= form_for(@core_status_termo_fd, :html=>{:class=>"form-horizontal well"}) do |f| %>
		<% if @core_status_termo_fd.errors.any? %>
		<div class="alert alert-error">
			<button type="button" class="close" data-dismiss="alert">&times;</button>
			<strong><%= pluralize(@core_status_termo_fd.errors.count, "erro") %> ao tentar salvar este formulario:</strong>
			
			<ul>
				<% @core_status_termo_fd.errors.full_messages.each do |msg| %>
				<li>
					<%= msg %>
				</li>
				<% end %>
			</ul>
		</div>
		<% end %>
				
		
		<div class="control-group">
			<%= f.label :descricao, :class=>"control-label" %>
			<div class="controls">
				<%= f.text_field :descricao, :class=>"input-xlarge" %>
				<p class="help-block">
					
				</p>
			</div>
		</div>
		
		<div class="form-actions">
			<%= f.submit :class=>"btn btn-primary" %>
			<button type="reset" class="btn">
				Cancelar
			</button>
		</div>
		<% end %>

	</div>
</div>

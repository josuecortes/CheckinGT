<div class="page-header">
	<h3>Lista de core_aquaviarios</h3>
</div>

<table class="table table-bordered table-striped table-hover">
	<thead>
		<tr>
			
			<th>Empresa</th>
			
			<th>Registro antaq</th>
			
			<th>Status</th>
			
			<th></th>
			<th></th>
			<th></th>
		</tr>
	</thead>

	<tbody>
		<%= content_tag_for(:tr, @core_aquaviarios) do |core_aquaviario| %>
		
		<td><%= core_aquaviario.empresa_id %></td>
		
		<td><%= core_aquaviario.registro_antaq %></td>
		
		<td><%= core_aquaviario.status %></td>
		
		<td><%= link_to 'Mostrar', core_aquaviario, :class=>"btn btn-small"%></td>
		<td><%= link_to 'Editar', edit_core_aquaviario_path(core_aquaviario), :class=>"btn btn-primary btn-small" %></td>
		<td><%= link_to 'Apagar', core_aquaviario, :class=>"btn btn-danger btn-small", method: :delete, data: { confirm: 'Você está certo disso?' } %></td>
		<% end %>
	</tbody>
</table>

<br />

<%= link_to 'Novo(a) Aquaviario', new_core_aquaviario_path, :class=>"btn btn-success" %>


<div class="page-header">
	<h3>Lista de core_termo_vistoria</h3>
</div>

<table class="table table-bordered table-striped table-hover">
	<thead>
		<tr>
			
			<th>Dad</th>
			
			<th>Unidade carga</th>
			
			<th>Termo vistoria data inicio</th>
			
			<th>Termo vistoria data final</th>
			
			<th>Observacoes</th>
			
			<th>Termo contagem</th>
			
			<th></th>
			<th></th>
			<th></th>
		</tr>
	</thead>

	<tbody>
		<%= content_tag_for(:tr, @core_termo_vistoria) do |core_termo_vistorium| %>
		
		<td><%= core_termo_vistorium.dad_id %></td>
		
		<td><%= core_termo_vistorium.unidade_carga_id %></td>
		
		<td><%= core_termo_vistorium.termo_vistoria_data_inicio %></td>
		
		<td><%= core_termo_vistorium.termo_vistoria_data_final %></td>
		
		<td><%= core_termo_vistorium.observacoes %></td>
		
		<td><%= core_termo_vistorium.termo_contagem %></td>
		
		<td><%= link_to 'Mostrar', core_termo_vistorium, :class=>"btn btn-small"%></td>
		<td><%= link_to 'Editar', edit_core_termo_vistorium_path(core_termo_vistorium), :class=>"btn btn-primary btn-small" %></td>
		<td><%= link_to 'Apagar', core_termo_vistorium, :class=>"btn btn-danger btn-small", method: :delete, data: { confirm: 'Você está certo disso?' } %></td>
		<% end %>
	</tbody>
</table>

<br />


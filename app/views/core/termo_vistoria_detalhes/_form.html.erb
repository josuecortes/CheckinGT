<div class="row">
	<div class="span10 offset1">

		<%= form_for(@core_termo_vistoria_detalhe, :html=>{:class=>"form-horizontal well"}) do |f| %>
		<% if @core_termo_vistoria_detalhe.errors.any? %>
		<div class="alert alert-error">
			<button type="button" class="close" data-dismiss="alert">&times;</button>
			<strong><%= pluralize(@core_termo_vistoria_detalhe.errors.count, "erro") %> ao tentar salvar este formulario:</strong>
			
			<ul>
				<% @core_termo_vistoria_detalhe.errors.full_messages.each do |msg| %>
				<li>
					<%= msg %>
				</li>
				<% end %>
			</ul>
		</div>
		<% end %>
				
		
		<div class="control-group">
			<%= f.label :termo_vistoria_id, :class=>"control-label" %>
			<div class="controls">
				<%= f.number_field :termo_vistoria_id, :class=>"input-xlarge" %>
				<p class="help-block">
					
				</p>
			</div>
		</div>
		
		<div class="control-group">
			<%= f.label :termo_vistoria_tipo_detalhe_id, :class=>"control-label" %>
			<div class="controls">
				<%= f.number_field :termo_vistoria_tipo_detalhe_id, :class=>"input-xlarge" %>
				<p class="help-block">
					
				</p>
			</div>
		</div>
		
		<div class="control-group">
			<%= f.label :valor_devido, :class=>"control-label" %>
			<div class="controls">
				<%= f.text_field :valor_devido, :class=>"input-xlarge" %>
				<p class="help-block">
					
				</p>
			</div>
		</div>
		
		<div class="control-group">
			<%= f.label :observacoes, :class=>"control-label" %>
			<div class="controls">
				<%= f.text_area :observacoes, :class=>"input-xlarge" %>
				<p class="help-block">
					
				</p>
			</div>
		</div>
		
		<div class="form-actions">
			<%= f.submit :class=>"btn btn-primary" %>
			<button type="reset" class="btn">
				Cancelar
			</button>
		</div>
		<% end %>

	</div>
</div>

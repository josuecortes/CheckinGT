<div class="page-header">
	<h3>Lista de core_ufs</h3>
</div>

<table class="table table-bordered table-striped table-hover">
	<thead>
		<tr>
			
			<th>Sigla</th>
			
			<th></th>
			<th></th>
			<th></th>
		</tr>
	</thead>

	<tbody>
		<%= content_tag_for(:tr, @core_ufs) do |core_uf| %>
		
		<td><%= core_uf.sigla %></td>
		
		<td><%= link_to 'Mostrar', core_uf, :class=>"btn btn-small"%></td>
		<td><%= link_to 'Editar', edit_core_uf_path(core_uf), :class=>"btn btn-primary btn-small" %></td>
		<td><%= link_to 'Apagar', core_uf, :class=>"btn btn-danger btn-small", method: :delete, data: { confirm: 'Você está certo disso?' } %></td>
		<% end %>
	</tbody>
</table>

<br />

<%= link_to 'Novo(a) Uf', new_core_uf_path, :class=>"btn btn-success" %>


<div class="row">
	<div class="span10 offset1">

		<%= form_for(@aquaviario_dad, :html=>{:class=>"form-horizontal well"}) do |f| %>
		<% if @aquaviario_dad.errors.any? %>
		<div class="alert alert-error">
			<button type="button" class="close" data-dismiss="alert">&times;</button>
			<strong><%= pluralize(@aquaviario_dad.errors.count, "erro") %> ao tentar salvar este formulario:</strong>
			
			<ul>
				<% @aquaviario_dad.errors.full_messages.each do |msg| %>
				<li>
					<%= msg %>
				</li>
				<% end %>
			</ul>
		</div>
		<% end %>
				
		
		<div class="control-group">
			<%= f.label :empresa_id, :class=>"control-label" %>
			<div class="controls">
				<%= f.number_field :empresa_id, :class=>"input-xlarge" %>
				<p class="help-block">
					
				</p>
			</div>
		</div>
		
		<div class="control-group">
			<%= f.label :porto_origem, :class=>"control-label" %>
			<div class="controls">
				<%= f.text_field :porto_origem, :class=>"input-xlarge" %>
				<p class="help-block">
					
				</p>
			</div>
		</div>
		
		<div class="control-group">
			<%= f.label :porto_destino_id, :class=>"control-label" %>
			<div class="controls">
				<%= f.number_field :porto_destino_id, :class=>"input-xlarge" %>
				<p class="help-block">
					
				</p>
			</div>
		</div>
		
		<div class="control-group">
			<%= f.label :empurrador, :class=>"control-label" %>
			<div class="controls">
				<%= f.text_field :empurrador, :class=>"input-xlarge" %>
				<p class="help-block">
					
				</p>
			</div>
		</div>
		
		<div class="control-group">
			<%= f.label :balsa, :class=>"control-label" %>
			<div class="controls">
				<%= f.text_field :balsa, :class=>"input-xlarge" %>
				<p class="help-block">
					
				</p>
			</div>
		</div>
		
		<div class="control-group">
			<%= f.label :previsao_chegada, :class=>"control-label" %>
			<div class="controls">
				<%= f.datetime_select :previsao_chegada, :class=>"input-xlarge" %>
				<p class="help-block">
					
				</p>
			</div>
		</div>
		
		<div class="control-group">
			<%= f.label :efetiva_chegada, :class=>"control-label" %>
			<div class="controls">
				<%= f.datetime_select :efetiva_chegada, :class=>"input-xlarge" %>
				<p class="help-block">
					
				</p>
			</div>
		</div>
		
		<div class="control-group">
			<%= f.label :usuario_id, :class=>"control-label" %>
			<div class="controls">
				<%= f.number_field :usuario_id, :class=>"input-xlarge" %>
				<p class="help-block">
					
				</p>
			</div>
		</div>
		
		<div class="control-group">
			<%= f.label :usuario_alterou_id, :class=>"control-label" %>
			<div class="controls">
				<%= f.number_field :usuario_alterou_id, :class=>"input-xlarge" %>
				<p class="help-block">
					
				</p>
			</div>
		</div>
		
		<div class="form-actions">
			<%= f.submit :class=>"btn btn-primary" %>
			<button type="reset" class="btn">
				Cancelar
			</button>
		</div>
		<% end %>

	</div>
</div>
